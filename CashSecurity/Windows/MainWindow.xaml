<Window x:Class="CashSecurity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashSecurity"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Background="White"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="ATM  TRACK"
            FontSize="25"
            Style="{StaticResource TextBlockStyle}"/>

        <Button
            x:Name="Close_Button"
            Click="Close_Button_Click"
            Style="{StaticResource ClosedButton}"/>

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Column="0">
                
                <TextBlock
                    Style="{StaticResource TextBlockStyle}"
                    VerticalAlignment="Top"
                    Grid.Column="0"
                    Text="Cash Security"
                    Margin="0 20 0 0"
                    FontSize="22"/>

                <StackPanel
                    Margin="10 70"
                    Orientation="Vertical">

                    <RadioButton
                        x:Name="rb_Home"
                        Content="Home"
                        Tag="{StaticResource home}"
                        Style="{StaticResource MenuButton}"
                        Click="rb_Home_Click"/>

                    <RadioButton
                        x:Name="rb_Track"
                        Content="Track"
                        Tag="{StaticResource server}"
                        Style="{StaticResource MenuButton}"
                        Click="rb_Track_Click"/>

                </StackPanel>
                
            </Grid>

            <Border
                Grid.Column="1"
                Background="{StaticResource SecondColor}">

                <Frame 
                    x:Name="PageNavigator"
                    NavigationUIVisibility="Hidden"/>

            </Border>
            
        </Grid>

    </Grid>
</Window>
